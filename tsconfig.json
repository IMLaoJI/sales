{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": [
        "dom",
        "es2015",
        "es2016",
        "es2017",
        "es2018",
        "es2019",
        "es2020",
        "esnext"
      ],
      "pretty": true,
      "removeComments": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "strictPropertyInitialization": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "baseUrl": "./src",
      "declaration": true,
      "noEmit": false,
      "outDir": "./build",
      "types": [
        "node",
        "jest"
      ]
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "src/tests/**/*.ts"
  ]
}